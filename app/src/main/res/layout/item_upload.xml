<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/mIcon"
        android:layout_width="36dp"
        android:layout_height="32dp"
        android:layout_marginLeft="8dp"
        android:src="@mipmap/img_directory"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mTvFileName"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:paddingTop="10dp"
        android:textColor="@color/color_black_404040"
        app:layout_constraintLeft_toRightOf="@+id/mIcon"
        tools:text="我的文件夹" />

    <TextView
        android:id="@+id/mTvUploadStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:layout_marginLeft="8dp"
        android:text="@string/waiting"
        android:textColor="@color/color_gray_919191"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@id/mTvFileName"
        app:layout_constraintLeft_toRightOf="@+id/mIcon"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_gray_D9D9D9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <io.netopen.hotbitmapgg.library.view.RingProgressBar
        android:id="@+id/mDlProgress"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginRight="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:max="100"
        app:ringColor="@android:color/darker_gray"
        app:ringProgressColor="@color/colorPrimary"
        app:ringWidth="2dp"
        app:style="STROKE"
        app:textColor="@color/colorPrimary"
        app:textIsShow="false"
        app:textSize="16sp" />

    <TextView
        android:id="@+id/mTvProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="100"
        android:gravity="center"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="@id/mDlProgress"
        app:layout_constraintRight_toRightOf="@id/mDlProgress"
        app:layout_constraintTop_toTopOf="@id/mDlProgress"
        app:layout_constraintBottom_toBottomOf="@id/mDlProgress"/>
</android.support.constraint.ConstraintLayout>