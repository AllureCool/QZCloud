<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white_ffffff">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="64dp"
            android:layout_height="92dp"
            android:layout_marginTop="133dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/mEtPhoneNum"
            android:layout_width="313dp"
            android:layout_height="25dp"
            android:layout_marginTop="60dp"
            android:background="@null"
            android:hint="@string/hint_et_phone"
            android:imeOptions="flagNoFullscreen|actionNext"
            android:maxLength="11"
            android:maxLines="1"
            android:nextFocusForward="@+id/mEtPassword"
            android:textColor="@color/color_gray_BFBFBF"
            android:textColorHint="@color/color_gray_BFBFBF"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_logo" />

        <View
            android:layout_width="313dp"
            android:layout_height="1dp"
            android:layout_marginTop="14dp"
            android:background="@color/color_green_2EC17C"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mEtPhoneNum" />

        <EditText
            android:id="@+id/mEtPassword"
            android:layout_width="313dp"
            android:layout_height="25dp"
            android:layout_marginTop="40dp"
            android:background="@null"
            android:hint="@string/hint_et_pwd"
            android:imeOptions="flagNoFullscreen|actionDone"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="@color/color_gray_BFBFBF"
            android:textColorHint="@color/color_gray_BFBFBF"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mEtPhoneNum" />

        <View
            android:layout_width="313dp"
            android:layout_height="1dp"
            android:layout_marginTop="14dp"
            android:background="@color/color_green_2EC17C"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mEtPassword" />

        <TextView
            android:id="@+id/mBtnForgetPwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="35dp"
            android:text="@string/forget_pwd"
            android:textColor="@color/color_green_2EC17C"
            android:textSize="12sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mEtPassword" />

        <Button
            android:id="@+id/mBtnLogin"
            style="@style/Button_List_Style"
            android:layout_marginTop="80dp"
            android:enabled="false"
            android:text="@string/login"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mEtPassword" />

        <TextView
            android:id="@+id/mBtnRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/regist"
            android:textColor="@color/color_green_2EC17C"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mBtnLogin" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>